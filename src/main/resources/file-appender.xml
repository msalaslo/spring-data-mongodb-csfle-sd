<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- JSON encoder -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
					                	<!-- TODO: installationnumber is an "extra field" example for logging and propagation. 
                	Delete it and put your custom fields if you need-->
                    <pattern>
                        {
						"timestamp": "%date{dd-MM-yyyy HH:mm:ss}",
						"severity": "%level",
						"class": "%logger{50}",
						"service": "${springAppName:-}",
						"trace": "%X{X-B3-TraceId:-}",
						"span": "%X{X-B3-SpanId:-}",
						"installationnumber": "%X{installationnumber:-}",
						"message": "%message"						
						}
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <!-- For Stacktraces multi-lined -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
          <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
            <maxDepthPerThrowable>50</maxDepthPerThrowable>
            <maxLength>4096</maxLength>
            <shortenedClassNameLength>20</shortenedClassNameLength>    
            <rootCauseFirst>true</rootCauseFirst>
            <inlineHash>true</inlineHash>
          </throwableConverter>
        </encoder>
        <file>${LOG_FILE}.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d.log.gz</fileNamePattern>
        </rollingPolicy>
    </appender>
</included>
